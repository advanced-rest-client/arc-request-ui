{
  "name": "@advanced-rest-client/arc-request-ui",
  "description": "UI components for ARC request: lists, editors, dialogs",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "main": "index.js",
  "module": "index.js",
  "authors": [
    "Pawel Psztyc"
  ],
  "contributors": [
    "Your name can be here!"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/advanced-rest-client/arc-request-ui.git"
  },
  "bugs": {
    "url": "https://github.com/advanced-rest-client/arc-request-ui/issues",
    "email": "arc@mulesoft.com"
  },
  "dependencies": {
    "@advanced-rest-client/arc-events": "^0.2.0",
    "@advanced-rest-client/arc-icons": "^3.1.2",
    "@advanced-rest-client/arc-marked": "^1.1.0",
    "@advanced-rest-client/arc-models": "^4.2.0",
    "@advanced-rest-client/arc-resizable-mixin": "^1.1.2",
    "@advanced-rest-client/arc-types": "^0.2.1",
    "@advanced-rest-client/code-mirror": "^3.1.3",
    "@advanced-rest-client/markdown-styles": "^3.1.3",
    "@advanced-rest-client/requests-list": "^0.1.6",
    "@anypoint-web-components/anypoint-button": "^1.1.1",
    "@anypoint-web-components/anypoint-checkbox": "^1.1.3",
    "@anypoint-web-components/anypoint-chip": "^0.2.1",
    "@anypoint-web-components/anypoint-chip-input": "^0.2.4",
    "@anypoint-web-components/anypoint-collapse": "^0.1.0",
    "@anypoint-web-components/anypoint-input": "^0.2.21",
    "@api-components/http-method-label": "^3.1.2",
    "@github/time-elements": "^3.1.1",
    "@polymer/iron-form": "^3.0.1",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-data-generator": "^3.1.9",
    "@advanced-rest-client/arc-demo-helper": "^2.2.0",
    "@advanced-rest-client/arc-menu": "^4.0.1",
    "@advanced-rest-client/testing-karma-sl": "^1.4.2",
    "@open-wc/eslint-config": "^3.0.0",
    "@open-wc/testing": "^2.5.29",
    "@open-wc/testing-karma": "^4.0.8",
    "@polymer/iron-test-helpers": "^3.0.1",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.7",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "sinon": "^9.2.0",
    "typescript": "^4.0.3",
    "typescript-lit-html-plugin": "^0.9.0"
  },
  "scripts": {
    "start": "es-dev-server --app-index demo/index.html --node-resolve --open --watch",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:types": "tsc",
    "lint": "npm run lint:eslint",
    "format": "npm run format:eslint",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:sl": "karma start karma.sl.config.js --compatibility auto --coverage",
    "gen:wc": "wca analyze \"*.js\" --outFile custom-elements.json"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "demo/**/*.js",
          "test/**/*.js",
          "**/demo/**/*.html"
        ],
        "rules": {
          "no-console": "off",
          "no-unused-expressions": "off",
          "no-plusplus": "off",
          "no-param-reassing": "off",
          "class-methods-use-this": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
